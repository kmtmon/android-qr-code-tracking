<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- ActionBar Style -->
    <style name="ActionBarMenu" parent="Theme.AppCompat.Light" >
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--Button Style-->
    <style name="EditTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextAppearance.Black">
        <item name="android:textColorHint">@color/pale_black</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>

    <style name="EditTextAppearance.White">
        <item name="android:textColorHint">@color/pale_white</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:backgroundTint">@color/pale_white</item>
    </style>

    <!--Button Style-->
    <style name="ButtonAppearance">
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <!-- Text Style -->
    <style name="TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
    </style>

    <style name="TextAppearance.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <style name="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <style name="TextAppearance.Tiny">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>
</resources>
